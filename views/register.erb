<section class="register">
    <h1>Register</h1>
    <p>Please fill in the information below:</p>

    <form action="/register" method="post">
        <input type="text" name="first_name" placeholder="First name">
        <input type="text" name="last_name" placeholder="Last name">
        <input type="email" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Password">
        <input type="text" name="fitness_goal" placeholder="Fitness goal">
        <input type="number" name="current_weight" placeholder="Current weight in kg">
        <input type="number" name="goal_weight" placeholder="Goal weight in kg">
        <input type="text" name="avatar_url" placeholder="Profile image URL">
        <button>Submit</button>
    </form>
</section>
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitnected</title>
    <link rel='stylesheet' href='/stylesheets/main.css'>
    <link rel="icon" type="image/png" sizes="32x32" href="/images/fitnected_logo.png">
  </head>

  <body>
    <header>
      <div>
        <figure class="app-logo">
          <img src="/images/fitnected_logo.png" alt="app_logo">
        </figure>
      </div>

      <div class="login-create-section">
        <nav>
          <% if logged_in? %>
            <form action="/logout" method="post">
              <input type="hidden" name="_method" value="delete">
              <button>Logout</button>
            </form>

            <p>Logged in as <%= current_user['first_name'] %></p>

            <figure class="avatar-logo">
              <% if current_user['avatar_url'] == '' %>
                <a href="/profile"><img src="/images/default_user_icon.png" alt="annoymous_avatar"></a>
              <% else %>
                <a href="/profile"><img src="<%= current_user['avatar_url']%>" alt="user_avatar"></a>
              <% end %>
            </figure> 
          <% else %>
            <a href="/register">Sign Up</a>
            <a href="/login">Login</a>
            <figure class="avatar-logo">
              <a href="/profile"><img src="/images/default_user_icon.png" alt="annoymous_avatar"></a>
            </figure>
          <% end %>
        </nav>

        <section class="app-titles">
          <h1>Fi&#882;<span class="nected">nected</span></h1>
        </section>
      </div>
      
    </header>

    <section class="nav-menu">
      <nav>
        <ul>
          <li><img src="/images/homepage_icon.png" alt="homepage_icon"><a href="/">Home</a></li>
          <li><img src="/images/about_icon.png" alt="about_icon"><a href="/about">About</a></li>
          <li><img src="/images/default_user_icon.png" alt="profile_icon"><a href="/profile">Profile</a></li>
          <li><img src="/images/exercise_tracker_icon.png" alt="exercise_tracker_icon"><a href="/exercises">Exercise Tracker</a></li>
          <li><img src="/images/diet_tracker_icon.png" alt="diet_tracker_icon"><a href="/diet">Diet Tracker</a></li>
        </ul>
      </nav>

      <main>
        <%= yield %>
      </main>
    </section>

    <footer>
      <p>&copy; Copyright 2020, Fitnected, Inc. All rights reserved.</p>
      <p>370 Queen St, Melbourne VIC 3000, Australia. Tel: +61 3 8368 0286</p>
      <nav>
        <ul>
          <li><a href="/contact">Contact us</a></li>
          <li><a href="/privacy">Privacy Policies</a></li>
        </ul>
      </nav>
    </footer>
  </body>
</html>